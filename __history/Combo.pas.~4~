{ TForm2 }

procedure TForm2.conexao;
begin
  FDConnection1.Close;
  FDConnection1.DriverName := 'MySQL';

  FDConnection1.Params.Clear;
  FDConnection1.Params.Add('Server=sistemashoras.mysql.uhserver.com');
  FDConnection1.Params.Add('Port=3306');
  FDConnection1.Params.Add('Database=sistemashoras');
  FDConnection1.Params.Add('User_Name=yuriinasc');
  FDConnection1.Params.Add('Password=24641217Yuri.');
  FDConnection1.Params.Add('CharacterSet=utf8');
  FDConnection1.Params.Add('UseSSL=False');

  FDConnection1.LoginPrompt := False;
  FDConnection1.Connected := True;
end;

procedure TForm2.FormCreate(Sender: TObject);
begin
  conexao;
end;

